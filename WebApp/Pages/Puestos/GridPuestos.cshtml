@page
@model WebApp.Pages.Puestos.GridPuestosModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            PUESTOS
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
                <br />
            </a>
            
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            @*ENCABEZADOS DE LA TABLA*@
                            <tr>
                                <th>Id_Puesto</th>
                                <th>Nombre</th>
                                <th>Salario</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Id_Puesto</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Salario</td>
                                    <td>@(item.Estado ? "Activo" : "Inactivo")</td>

                                    @*BOTONES*@
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.Id_Puesto">
                                            <i class='bx bxs-edit'></i>
                                        </a>

                                        <button type="button" class="btn btn-outline-primary" onclick="PuestosGrid.OnClickEliminar              (@item.Id_Puesto)">
                                            <i class='bx bx-trash'></i>
                                        </button>

                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            </div>



        </div>
    </div>

</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";

    </script>

    <script defer src="~/App/Puestos/Grid.js"></script>


}
